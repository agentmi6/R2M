@model IEnumerable<R2M.Domain.Report>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">

    @foreach (var item in Model)
    {            
        <div class="col-md-4" style="border:1px solid black;">
            <img src="@Url.Content(item.ApplicationUser.UserImg)" width="80px" height="100px"/>
            <br />
            @Html.DisplayNameFor(model => model.ApplicationUser.UserName) : @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            <br />
            @Html.DisplayNameFor(model => model.Department.DeptName) : @Html.DisplayFor(modelItem => item.Department.DeptName)
            <br />
            @Html.DisplayNameFor(model => model.DailyReport) : @Html.DisplayFor(modelItem => item.DailyReport)
        </div>
    }

</div>